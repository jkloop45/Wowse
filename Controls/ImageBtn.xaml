<UserControl x:Class="Controls.ImageBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseEnter="content_MouseEnter" MouseLeave="content_MouseLeave" MouseDown="content_MouseDown" MouseUp="content_MouseUp">
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding Source}"/>
    </UserControl.Background>
    <Viewbox>
        <TextBlock x:Name="content" Foreground="{Binding Foreground}" Text="{Binding Text}" FontSize="{Binding FontSize}" MouseEnter="content_MouseEnter" MouseLeave="content_MouseLeave" MouseDown="content_MouseDown" MouseUp="content_MouseUp"/>
    </Viewbox>
</UserControl>
